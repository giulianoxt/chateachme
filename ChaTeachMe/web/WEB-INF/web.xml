<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>ChatController</servlet-name>
        <servlet-class>controller.ChatController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CTLServlet</servlet-name>
        <servlet-class>controller.CTLServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>modules.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalasServlet</servlet-name>
        <servlet-class>modules.salas.SalasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>modules.main.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>modules.main.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatController</servlet-name>
        <url-pattern>/ChatController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CTLServlet</servlet-name>
        <url-pattern>/CTLServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalasServlet</servlet-name>
        <url-pattern>/SalasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/MainServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
