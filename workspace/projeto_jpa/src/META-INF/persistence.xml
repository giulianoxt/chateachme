<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="projeto_jpa">
		<class>projeto_web.model.Usuario</class>
		<class>projeto_web.model.Professor</class>
		<class>projeto_web.model.Sala</class>
		<class>projeto_web.model.SituacaoUsuarioSala</class>
		<class>projeto_web.model.Administrador</class>
		<class>projeto_web.model.Mensagem</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
			<property name="eclipselink.ddl-generation.output-mode" value="sql-script"/>
		</properties>
	</persistence-unit>
</persistence>
